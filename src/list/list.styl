.list
    list-style: none
    margin: 0
    padding: 0

    > .list-item
        height: 30px;
        line-height: 30px;
        overflow: auto
        padding: 10px
        border: $list['border']

        for $brand in $brands
            &.list-item-{$brand}
                border: 1px solid lighten($brands[$brand], 20%)
                background-color: $brands[$brand]

        &:first-child
            border-top-left-radius: $list['border-radius']
            border-top-right-radius: $list['border-radius']

        &:last-child
            border-bottom-left-radius: $list['border-radius']
            border-bottom-right-radius: $list['border-radius']
