body {
	margin: 0;
}

for $brand in $brands {
	.text-{$brand}, .text-{$brand} > * {
		color: $brands[$brand] !important;
	}

	.background-{$brand} {
		background-color: $brands[$brand] !important;
	}

	.border-{$brand} {
		border-color: $brands[$brand] !important;
	}
}

.responsive {
	width: 100%;
	height: auto;
}

.text-right {
	text-align: right;
}

.text-left {
	text-align: left;
}

.text-center {
	text-align: center;
}
