hr
    display: block
    box-sizing: content-box
    text-align: center
    border: 0
    height: 0
    border-top: 1px solid $brands['default']
    border-bottom: 1px solid rgba(255, 255, 255, 0.3)

    &.ellipsis
        border-top: 0
        border-bottom: 0

        &:before
            font-weight: 400
            font-style: italic
            font-size: 28px
            letter-spacing: .6em
            font-size: 13px
            content: '...'
            display: inline-block
            margin-left: .6em
            color: $brands['black']
            position: relative

pre
    display: block
    padding: 10px
    font-size: 13px
    line-height: 1.42857143
    word-break: break-all
    word-wrap: break-word
    white-space: normal
    background-color: #f5f5f5
    border-radius: $border-radius
    border-left: .3rem solid transparent

blockquote
    padding: 10px 20px
    font-size: 17.5px
    border-left: 5px solid #eee

code
    border-radius: 0
    display: block
    padding: 1rem 1.5rem
    white-space: pre
    max-width: 100%
    
a
    color: $colors['link']
    text-decoration: none
    font-weight: 300

small
    color: inherit
    font-size: 75%
    font-weight: 400
