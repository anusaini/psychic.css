style.
    .spinner-inline > .spinner-overlay {
        height:100px;
        display:inline-block;
        width:auto;
    }

pre(class="prettyprint linenums lang-html")
    div(class="spinner-overlay")
        div(class="spinner spinner-{brand}")
br
div(style="width:100%;text-align:center;" class="spinner-inline")
    each val in ['default', 'primary', 'success', 'info', 'warning', 'danger']
        div(class="spinner-overlay")
            div(class="spinner spinner-#{val}")
            
br

