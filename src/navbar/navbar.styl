.navbar
    position: relative
    min-height: 50px
    width: 100%
    display: table

    &.center

        > .container
            margin: 0 auto;
            width: 50%;
            position: relative

    for $brand in $brands
        &.navbar-{$brand}

            > .container
                background-color: $brands[$brand]
                border-color: lightness($brands[$brand]) < $bright-border-lightness ? $brands[$brand] : darken(#ffffff, 25%)

    > .container
        margin-right: auto;
        margin-left: auto
        display: table;
        width:100%;
        height:60px;

    .navbar-title
        display: inline-block
        margin-left: 20px
        margin-top: 20px
        font-weight: bold
        color: lightness($brands[$brand]) < $bright-text-lightness ? #ffffff : #000000

        > * > a
            color: black
            text-decoration: none
