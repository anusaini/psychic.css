.navbar *
    font-weight: 300
    display: inline-block
    text-decoration: none

.navbar
    position: relative
    min-height: 50px
    width: 100%
    display: table

    > .container
      border-width: 0 0 $navbar['border-width'] 0

    &.navbar-fixed
        position: fixed
        z-index: 100000

    &.navbar-center

        > .container
            border-width: 0 $navbar['border-width'] $navbar['border-width'] $navbar['border-width']
            margin: 0 auto
            width: 50%
            position: relative

            > .navbar-content
                margin: 0

    for $brand in $brands
        &.border-{$brand}
          > .container
            border-style: solid

        &.navbar-{$brand}

            > .container
                background-color: $brands[$brand]

                > .nav a

                      &:target,
                      &.active,
                      &:hover
                        background-color: lighten($brands[$brand], 65%)

    > .container
        clear: both
        margin: 0 auto 0 auto
        display: table
        width: 100%
        height: 60px

        > .nav
            float: right
            margin: 0 20px 0 0
            display: inline-block

            > select
              background-color: transparent

            > a
              padding: 20px 10px 22px 10px

              &:hover, &:target, &:active
                opacity: .6;

    .navbar-title
        float: left
        display: inline-block
        margin: 20px 0 0 20px
