.navbar *
    font-weight: 300

.navbar
    position: relative
    min-height: 50px
    width: 100%
    display: table

    &.navbar-fixed
        position: fixed
        z-index: 100000

    &.navbar-center

        > .container
            margin: 0 auto
            width: 50%
            position: relative

            > .navbar-content
                margin: 0

    for $brand in $brands
        &.border-{$brand}
            border-color: lighten($brands[$brand], 75%)


        &.navbar-{$brand},
        &.navbar-{$brand} *
            color: lightness($brands[$brand]) < $bright-text-lightness ? #ffffff : #000000
            background-color: transparent

            > .container
                background-color: $brands[$brand]
                border-color: lightness($brands[$brand]) < $bright-border-lightness ? $brands[$brand] : darken(#ffffff, 25%)

                > .nav a

                      &:target,
                      &.active,
                      &:hover
                        background-color: lighten($brands[$brand], 75%)
                        color: lightness($brands[$brand]) < $bright-border-lightness ? $brands[$brand] : darken(#ffffff, 25%)

    > .container
        clear: both
        margin-right: auto
        margin-left: auto
        display: table
        width:100%
        height:60px

        > .nav
            float: right;
            margin-right: 20px;
            display: inline-block;
            margin-top: 0px

            > *
                display: inline-block;
                text-decoration: none

            > a
                padding-bottom: 22px
                padding-top: 20px
                padding-right: 10px
                padding-left: 10px

                &:hover, &:target, &:active
                  opacity: .5;

    .navbar-title
        float: left
        display: inline-block
        margin-left: 20px
        margin-top: 20px
        font-weight: bold

        > * > a
            color: black
            text-decoration: none
