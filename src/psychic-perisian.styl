$grid-columns = 12
$grid-gutter = 0

$border-radius = 0
$bright-text-lightness = 90%
$bright-border-lightness = 99%

$breakpoints = {
  xs: 16em
  sm: 32em
  md: 48em
  lg: 64em
  xl: 80em
}

$brands = {
    white: #ffffff
    black: #4b4b4b
    default: #eeeeee
    primary: #91c4f0
    success: #a8ffab
    info: #a2e5ff
    warning: #febb80
    danger: #ff9690
}

$colors = {
    link: #e22620
}

$button = {}

$alert = {
    border-radius: $border-radius
}

$dropdown = {
    border: 1px solid $brands['default']
}

$table = {
    padding: 10px
}

$navbar = {
    border-width: 1px
    border-color: $brands['default']
}

$nav = {
    border-width: 3px
    border-color: $brands['primary']
}

$popover = {
    border-radius: $border-radius
}

$progress = {
    border: 1px solid $brands['default']
    background-color: $brands['primary']
    padding: 5px
    height: 10px
    font-size: 9px
}

$list = {
    border: 1px solid $brands['default']
    border-radius: $border-radius
}

$badge = {
    padding: 5px
    border-radius: 100px
}

$callout = {
    padding: 15px
    border-color: #eee
}

@import 'utils/normalize.css'
@import 'helper/helper.styl'
@import 'typography/typography.styl'
@import 'grid/grid.styl'
@import 'table/table.styl'
@import 'navbar/navbar.styl'
@import 'nav/nav.styl'
@import 'nav-tab/nav-tab.styl'
@import 'spinner/spinner.styl'
