label {
	display: inline-block;
	margin-bottom: 0.5rem;
}

input, textarea, select {
	display: block;
	padding: 0.375rem 1% 0.375rem 1%;
	line-height: 1.5;
}

select {
  background-image:
    linear-gradient(45deg, transparent 50%, gray 50%),
    linear-gradient(135deg, gray 50%, transparent 50%);
  background-position:
    calc(100% - 20px) calc(1em + 2px),
    calc(100% - 15px) calc(1em + 2px);
  background-size:
    5px 5px,
    5px 5px,
    1px 1.5em;
  background-repeat: no-repeat
  background-color: $brands['white']
  border: 1px solid $brands['default']
  border-radius: $border-radius
  display: inline-block
  line-height: 1.5em
  padding: 5px 30px 5px 15px
  width: auto
  margin: 0

  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box
  box-sizing: border-box
  -webkit-appearance: none
  -moz-appearance: none

	&:focus {
	  background-image:
	    linear-gradient(45deg, gray 50%, transparent 50%),
	    linear-gradient(135deg, transparent 50%, gray 50%);
	  background-position:
	    calc(100% - 15px) 1em,
	    calc(100% - 20px) 1em;
	  background-size:
	    5px 5px,
	    5px 5px,
	    1px 1.5em;
	  background-repeat: no-repeat;
	  outline: 0;
	}
}

input, textarea {
	width: 98%;
	margin: 0;
	padding: 0.375rem 1% 0.375rem 1%;
	background-color: $brands['white'];
	background-image: none;
	border: 1px solid $brands['default'];
	border-radius: 0.25rem;

	&:focus {
		border-color: $brands['primary'];
		outline: 0;
	}

	for $brand, value in $brands {
		&.input-{$brand} {
			border-color: lighten(value, 65%);

			&:focus {
				border-color: darken(value, 25%);
			}
		}
	}
}

.btn-group {
	margin: 10px;
	display: inline-block;

	> .btn {
		margin: -3px;
		border-radius: 0px;

		&:first-child {
			border-radius: $border-radius 0 0 $border-radius;
		}

		&:last-child {
			border-radius: 0 $border-radius $border-radius 0;
		}
	}
}

.btn {
	padding: 12px 18px;
	margin: 10px;
	cursor: pointer;
	display: inline-block;
	text-align: center;
	background-color: white;
	border-radius: $border-radius;
	border: 1px solid $brands['default'];
	color: $colors['text'];

	&:hover {
		border-color: lighten($brands['default'], 15%);
	}

	&:active {
		opacity: 0.5;
	}

	&:focus {
		outline: none;
	}

	&.btn-block {
		width: 100%;
	}

	for key, value in $brands {
		&.border-{key} {
			color: value;

			&:hover, &:active {
				border-color: lighten(value, 15%);
			}

			&:active {
				border-color: darken(value, 15%);
				opacity: 0.5;
			}
		}

		&.btn-{key} {
			color: lightness(value) < $bright-text-lightness ? #ffffff : #000000;
			border: 1px solid darken(value, 15%);
			background-color: value;

			&:hover, &:active {
				border-color: darken(value, 15%);
			}

			&:hover {
				background-color: lighten(value, 15%);
			}

			&:active {
				background-color: darken(value, 15%);
				opacity: 0.5;
			}
		}
	}
}
