$grid-columns = 12
$grid-gutter = 0

$border-radius = 5px
$bright-text-lightness = 70%
$bright-border-lightness = 99%

$brands = {
    default: #efefef
    primary: darken(#428bca, 6.5%)
    success: #5cb85c
    info: #5bc0de
    warning: #f0ad4e
    danger: #d9534f
}

$table = {
    padding: 10px
}

$navbar = {
    border-width: 1px
    border-color: $brands['default']
}

$popover = {
    border-radius: $border-radius
}

$dropdown = {
    border: 1px solid $brands['default']
}

$alert = {
    border-radius: $border-radius
}
